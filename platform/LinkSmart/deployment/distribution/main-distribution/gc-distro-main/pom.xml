<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>eu.linksmart.gc.distribution</groupId>
    	<artifactId>eu.linksmart.gc.distribution.main</artifactId>
    	<version>0.0.1-SNAPSHOT</version>
     </parent>
     
    <artifactId>eu.linksmart.gc.distribution.main.deployable</artifactId>
    
    <name>LS GC - main zip archive</name>
    <description>Delivers a LinkSmart GC distribution as ZIP and GZIP</description>
    
    <packaging>pom</packaging>
     
    <dependencies>
    	<dependency>
            <groupId>eu.linksmart.gc.distribution</groupId>
            <artifactId>eu.linksmart.gc.distribution.main.kar</artifactId>
            <version>${linksmart.gc.version}</version>
            <type>kar</type>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf</groupId>
            <artifactId>apache-karaf</artifactId>
            <type>tar.gz</type>
        </dependency>
    </dependencies>
    
    <profiles>
    	<profile>
    		<id>maven-assembly</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<executions>
							<execution>
								<id>default</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/linksmart-gc-distribution.xml</descriptor>
							</descriptors>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
                            <execution>
                                <!-- Uncompress the standard Karaf distribution -->
                                <id>unpack</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.apache.karaf</groupId>
                                            <artifactId>apache-karaf</artifactId>
                                            <type>tar.gz</type>
                                            <outputDirectory>target/linksmart-gc-resources</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
							<execution>
								<id>copy-linksmart-karaf-archive-resources</id>
								<phase>process-resources</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
					            	<artifactItems>
										<artifactItem>
											<groupId>eu.linksmart.gc.distribution</groupId>
            								<artifactId>eu.linksmart.gc.distribution.main.kar</artifactId>
											<type>kar</type>
											<outputDirectory>target/linksmart-gc-resources</outputDirectory>
											<destFileName>linksmart-gc-karaf-archive.zip</destFileName>
										</artifactItem>
									</artifactItems>
					            </configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
		                <groupId>org.apache.maven.plugins</groupId>
		                <artifactId>maven-antrun-plugin</artifactId>
		                <executions>
		                    <execution>
		                        <id>unzip-linksmart-archive</id>
		                        <phase>process-resources</phase>
		                        <configuration>
		                            <tasks>
		                                <echo message="unpack linksmart-gc-karaf-archive" />
		                                <unzip src="target/linksmart-gc-resources/linksmart-gc-karaf-archive.zip" dest="target/linksmart-gc-resources/unpacked-resources" />
		                            </tasks>
		                        </configuration>
		                        <goals>
		                            <goal>run</goal>
		                        </goals>
		                    </execution>
		                </executions>
		            </plugin>
				</plugins>
			</build>
    	</profile>
    	<profile>
    		<id>karaf-assembly</id>
    		<build>
				<plugins>
					<plugin>
						<groupId>org.apache.karaf.tooling</groupId>
						<artifactId>karaf-maven-plugin</artifactId>
						<extensions>true</extensions>
						<configuration>
							<!-- no startupFeatures -->
							<bootFeatures>
								<feature>standard</feature>
								<feature>management</feature>
							</bootFeatures>
							<!-- no installedFeatures -->
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
		        <dependency>
		            <!-- scope is compile so all features (there is only one) are installed into startup.properties and the feature repo itself is not installed -->
		            <groupId>org.apache.karaf.features</groupId>
		            <artifactId>framework</artifactId>
		            <version>${karaf.version}</version>
		            <type>kar</type>
		        </dependency>
		        <dependency>
		            <!-- scope is runtime so the feature repo is listed in the features service config file, and features may be installed using the karaf-maven-plugin configuration -->
		            <groupId>org.apache.karaf.features</groupId>
		            <artifactId>standard</artifactId>
		            <classifier>features</classifier>
		            <version>${karaf.version}</version>
		            <type>xml</type>
		            <scope>runtime</scope>
		        </dependency>
    		</dependencies>
    	</profile>
    </profiles>
    
</project>
